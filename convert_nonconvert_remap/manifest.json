{
  "name": "Convert NonConvert remapper",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Allows you to remap Convert NonConvert",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "input"
  ],
  "input_components": [
    {
      "name": "Convert NonConvert remapper",
      "type": "ime",
      "id": "convert_nonconvert_remapper",
      "description": "Allows you to remap Convert NonConvert",  // user visible description
      "language": "ja-JP",  // The primary language this IME is used for
      "layouts": ["ja"]  // The supported keyboard layouts for this IME
    }
  ]
}
